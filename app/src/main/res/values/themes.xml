<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.RetailPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme color overrides -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryContainer">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Optional: toolbar, button tint, etc. -->
        <item name="android:statusBarColor">@color/orange_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Entry point for theme -->
    <style name="Theme.RetailPOS" parent="Base.Theme.RetailPOS" />

    <!-- Bottom sheet dialog styling -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
