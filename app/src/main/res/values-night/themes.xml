<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base night theme -->
    <style name="Base.Theme.RetailPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme color overrides -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryContainer">@color/orange_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Optional -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
</resources>
